<div id="board">
  <% turn = @game.board.decoding_grid.length %>
  <% @game.board.decoding_grid.reverse.each_with_index do | row, i| %>
    <div class="row">
      <span class="turn-display"><%= turn %></span>
      <% row.each do |cell| %>
          <div class="peg <%=settings.colors[cell.value]%>"></div>
      <% end %>
    </div>
    <% turn -= 1 %>
  <% end %>
</div>

<form method="post" action="reset_game">
  <input type="submit" value="Reset Game"></button>
</form>